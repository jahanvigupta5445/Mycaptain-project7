#include<stdio.h>
int main()
{
int i, j,matrix[3][3],sum=0;
printf("input the elements of a matrix: \n");
for(i=0;i<3;i++)
{
for(j=0;j<3;j++)
{
printf(" the elements - [%d][%d]",i,j);
scanf("%d",(&matrix[i][j]);
}
}
printf("The matrix is: \n");
for(i=0;i<3;i++)
{
printf("\n");
for(j=0;j<3;j++)
{
printf("%d\t",*(&matrix[i][j]));
}
}
printf("\n\n");
for(rows=0;rows<i;rows++)
{
sum=sum+matrix[rows][rows];
}
printf("the sum of diagonal elements is: %d",sum);
}
